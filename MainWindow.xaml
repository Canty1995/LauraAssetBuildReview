<Window x:Class="LauraAssetBuildReview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauraAssetBuildReview"
        xmlns:vm="clr-namespace:LauraAssetBuildReview.ViewModels"
        mc:Ignorable="d"
        Title="EAN Excel Matcher - Flexible" Height="1000" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Configuration Section (Collapsible) -->
        <Expander Grid.Row="0" Header="⚙️ Configuration Options" IsExpanded="False" Margin="0,0,0,15"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <StackPanel Margin="5">
                    <!-- Main File Settings -->
                    <GroupBox Header="📄 Main File Settings">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="EAN Column:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Config.EanColumn}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>
                            <Label Grid.Row="0" Grid.Column="3" Content="Status Column:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding Config.StatusColumn}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Dropdown Column:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Config.DropdownColumn}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>
                            <Label Grid.Row="1" Grid.Column="3" Content="Start Row:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding Config.StartRow}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Worksheet:" VerticalAlignment="Center" Margin="0,5"/>
                            <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Content="Index" IsChecked="{Binding UseWorksheetIndex}" 
                                           VerticalAlignment="Center" Margin="0,0,5,0" FontSize="11"/>
                                <TextBox Grid.Column="1" Text="{Binding Config.WorksheetIndex}" 
                                        VerticalContentAlignment="Center" Padding="5,3" IsEnabled="{Binding UseWorksheetIndex}"/>
                            </Grid>
                            <Label Grid.Row="2" Grid.Column="3" Content="Min EAN Digits:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding Config.MinEanDigits}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Max EAN Digits:" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Config.MaxEanDigits}" Margin="5" 
                                    VerticalContentAlignment="Center" Padding="5,3"/>
                            <CheckBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Content="Allow Non-Numeric EANs" 
                                     IsChecked="{Binding Config.AllowNonNumericEans}" Margin="10,5,0,5" VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>

                    <!-- Reference Files -->
                    <GroupBox Header="📚 Reference Files">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ReferenceFileConfigs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander IsExpanded="False" Margin="0,5,0,0" 
                                                 Background="#FAFAFA" BorderBrush="#D0D0D0" BorderThickness="1" Padding="8">
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="12"/>
                                                    <Button Grid.Column="1" Content="✕ Remove" Command="{Binding RemoveCommand}" 
                                                           Background="#F44336" Padding="8,4" FontSize="10" Margin="5,0,0,0"/>
                                                </Grid>
                                            </Expander.Header>
                                            <StackPanel Margin="10,5">
                                                <!-- File Path -->
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="File Path:" VerticalAlignment="Center" MinWidth="100"/>
                                                    <TextBox Grid.Column="1" Text="{Binding FilePath}" IsReadOnly="True" 
                                                            Margin="5,0" VerticalContentAlignment="Center" Padding="5,3"/>
                                                    <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseCommand}" 
                                                           MinWidth="80" Margin="5,0,0,0"/>
                                                </Grid>
                                                
                                                <!-- Reference File Settings -->
                                                <!-- Excel Settings -->
                                                <Grid Visibility="{Binding IsPowerPointFile, Converter={StaticResource InverseBooleanConverter}}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="140"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="20"/>
                                                        <ColumnDefinition Width="140"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Row="0" Grid.Column="0" Content="EAN Column:" VerticalAlignment="Center" Margin="0,5"/>
                                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Config.EanColumn}" Margin="5" 
                                                            VerticalContentAlignment="Center" Padding="5,3"/>
                                                    <Label Grid.Row="0" Grid.Column="3" Content="Start Row:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                                                    <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding Config.StartRow}" Margin="5" 
                                                            VerticalContentAlignment="Center" Padding="5,3"/>

                                                    <Label Grid.Row="1" Grid.Column="0" Content="Worksheet Index:" VerticalAlignment="Center" Margin="0,5"/>
                                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Config.WorksheetIndex}" Margin="5" 
                                                            VerticalContentAlignment="Center" Padding="5,3"/>
                                                    <Label Grid.Row="1" Grid.Column="3" Content="Priority:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                                                    <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding Config.Priority}" Margin="5" 
                                                            VerticalContentAlignment="Center" Padding="5,3"/>

                                                    <Label Grid.Row="2" Grid.Column="0" Content="Dropdown Option:" VerticalAlignment="Center" Margin="0,5"/>
                                                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" 
                                                            Text="{Binding Config.MappedDropdownOption}" Margin="5" 
                                                            VerticalContentAlignment="Center" Padding="5,3"
                                                            ToolTip="Optional: Manually specify dropdown option for this file"/>
                                                </Grid>

                                                <!-- PowerPoint Settings -->
                                                <StackPanel Visibility="{Binding IsPowerPointFile, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,5,0,0">
                                                    <Grid Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition Width="140"/>
                                                            <ColumnDefinition Width="80"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Grid.Column="0" Content="Priority:" VerticalAlignment="Center" Margin="0,5"/>
                                                        <TextBox Grid.Column="1" Text="{Binding Config.Priority}" Margin="5" 
                                                                VerticalContentAlignment="Center" Padding="5,3"/>
                                                        <Label Grid.Column="3" Content="Dropdown Option:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                                                        <TextBox Grid.Column="4" Text="{Binding Config.MappedDropdownOption}" Margin="5" 
                                                                VerticalContentAlignment="Center" Padding="5,3"
                                                                ToolTip="Optional: Manually specify dropdown option for this file"/>
                                                    </Grid>
                                                    
                                                    <Label Content="Select Slides to Extract EANs From:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                                                    <Border BorderBrush="#D0D0D0" BorderThickness="1" Background="White" MaxHeight="150" Margin="0,0,0,5">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <ItemsControl ItemsSource="{Binding AvailableSlides}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <CheckBox Content="{Binding SlideNumber, StringFormat='Slide {0}'}" 
                                                                                 IsChecked="{Binding IsSelected}" 
                                                                                 Margin="5,2"/>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </ScrollViewer>
                                                    </Border>
                                                    <TextBlock Text="Leave all unchecked to process all slides" 
                                                              FontStyle="Italic" FontSize="10" Foreground="#666666" Margin="5,0,0,5"/>
                                                    <Button Content="Update Selection" Command="{Binding UpdateSelectedSlidesCommand}" 
                                                           HorizontalAlignment="Left" Margin="0,5,0,0" Padding="8,4" FontSize="11"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="+ Add Reference File" Command="{Binding AddReferenceFileCommand}" 
                                   HorizontalAlignment="Left" Margin="0,10,0,0" Background="#4CAF50"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Dropdown Mapping -->
                    <GroupBox Header="🔗 Dropdown Mapping">
                        <StackPanel>
                            <CheckBox Content="Auto-map filenames to dropdown options" 
                                     IsChecked="{Binding Config.AutoMapFilenames}" Margin="0,0,0,10"/>
                            <Label Content="Manual Mappings (File Path → Dropdown Option):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <DataGrid ItemsSource="{Binding ManualMappings}" AutoGenerateColumns="False" 
                                     CanUserAddRows="True" CanUserDeleteRows="True" Height="120" Margin="0,0,0,10"
                                     HeadersVisibility="Column" GridLinesVisibility="All">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*"/>
                                    <DataGridTextColumn Header="Dropdown Option" Binding="{Binding DropdownOption}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Expected Dropdown Count:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding ExpectedDropdownCountText}" Width="100" 
                                        HorizontalAlignment="Left" Padding="5,3"
                                        ToolTip="Leave empty to accept any count"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Config Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="💾 Save Config" Command="{Binding SaveConfigCommand}" Margin="0,0,5,0" Background="#FF9800"/>
                        <Button Content="📂 Load Config" Command="{Binding LoadConfigCommand}" Margin="5,0,5,0" Background="#9C27B0"/>
                        <Button Content="🔄 Reset" Command="{Binding ResetConfigCommand}" Margin="5,0,0,0" Background="#607D8B"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Expander>

        <!-- Main File Selection -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="4">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="📄 Main File (PowerPoint/Excel):" VerticalAlignment="Center" MinWidth="200" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="1" Text="{Binding MainFilePath}" IsReadOnly="True" Margin="5,0" 
                            VerticalContentAlignment="Center" Padding="8,5" Background="#FAFAFA"/>
                    <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseMainFileCommand}" MinWidth="100"/>
                </Grid>
                <TextBlock Text="Note: PowerPoint files will extract EANs from all slides. Excel files will read from column C starting at row 3." 
                          FontSize="10" FontStyle="Italic" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Run Button and Status -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="▶ Run Processing" Command="{Binding RunCommand}" 
                   IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                   Height="45" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" Background="#4CAF50"/>
            <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" VerticalAlignment="Center" 
                      FontWeight="SemiBold" FontSize="12" Foreground="#666666" Margin="10,0,0,0"/>
        </Grid>

        <!-- Progress Indicator -->
        <Grid Grid.Row="3" Margin="0,0,0,10" Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Height="6" Background="#E0E0E0" Foreground="#2196F3"/>
        </Grid>

        <!-- Tab Control for Comparison and Logs -->
        <TabControl Grid.Row="5" Background="White" BorderBrush="#E0E0E0">
            <TabItem Header="📊 File Comparison">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <Label Content="File Comparison" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                        
                        <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="File 1 (Manual):" VerticalAlignment="Center" MinWidth="120"/>
                                <TextBox Grid.Column="1" Text="{Binding ComparisonFile1Path}" IsReadOnly="True" Margin="5,0" 
                                        VerticalContentAlignment="Center" Padding="8,5" Background="White"/>
                                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseComparisonFile1Command}" MinWidth="100"/>
                            </Grid>
                        </Border>

                        <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="File 2 (Program):" VerticalAlignment="Center" MinWidth="120"/>
                                <TextBox Grid.Column="1" Text="{Binding ComparisonFile2Path}" IsReadOnly="True" Margin="5,0" 
                                        VerticalContentAlignment="Center" Padding="8,5" Background="White"/>
                                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseComparisonFile2Command}" MinWidth="100"/>
                            </Grid>
                        </Border>

                        <GroupBox Header="Comparison Settings" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Column:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Column="1" Text="{Binding Config.ComparisonColumn}" Margin="5" 
                                        VerticalContentAlignment="Center" Padding="5,3"/>
                                <Label Grid.Column="3" Content="Start Row:" VerticalAlignment="Center" Margin="10,5,0,5"/>
                                <TextBox Grid.Column="4" Text="{Binding Config.ComparisonStartRow}" Margin="5" 
                                        VerticalContentAlignment="Center" Padding="5,3"/>
                            </Grid>
                        </GroupBox>

                        <Button Content="🔍 Compare Files" Command="{Binding CompareFilesCommand}" 
                               IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                               Height="40" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Left" MinWidth="150"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="📝 Log Output">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding LogMessages}" 
                            Background="#1E1E1E" 
                            Foreground="#4EC9B0"
                            FontFamily="Consolas"
                            FontSize="11"
                            BorderThickness="0"
                            SelectionMode="Extended">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,3"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
